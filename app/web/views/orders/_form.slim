- errors ||= []
- fields ||= {}

form.common-form method="post" action="/orders/"
  span.highlighted-title New Order

  .errors
    - errors.each do |err|
      = err == :empty_text ? "Text can't be empty.." : ''

  label.label for="text"
    | New Order
    small.label-desc Write down what are you interested in:
  textarea#text name="text" placeholder="order..."
    = fields['text']

  button.btn.btn-submit Submit order
